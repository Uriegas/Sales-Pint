<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<HBox prefHeight="487.0" prefWidth="751.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uriegas.FXMLController">
   <children>
      <VBox prefHeight="487.0" prefWidth="450.0">
         <children>
            <StackPane prefWidth="248.0">
               <children>
                  <TextField fx:id="searchbar" alignment="BASELINE_RIGHT" StackPane.alignment="TOP_LEFT">
                     <StackPane.margin>
                        <Insets left="50.0" right="50.0" />
                     </StackPane.margin></TextField>
                  <Button fx:id="search_btn" text="Button" StackPane.alignment="CENTER_RIGHT" />
                  <Button fx:id="clear_btn" text="Button" StackPane.alignment="CENTER_LEFT" />
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </StackPane>
            <ButtonBar prefHeight="40.0" prefWidth="200.0">
              <buttons>
                  <Button fx:id="addbtn" mnemonicParsing="false" text="Add" />
                <Button fx:id="updatebtn" mnemonicParsing="false" text="Update" />
                  <Button fx:id="deletebtn" mnemonicParsing="false" text="Delete" />
              </buttons>
               <VBox.margin>
                  <Insets left="5.0" right="5.0" />
               </VBox.margin>
            </ButtonBar>
            <TableView fx:id="searchableproducts" prefWidth="310.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="productid" editable="false" minWidth="9.0" prefWidth="78.0" text="ID" />
                <TableColumn fx:id="productname" editable="false" prefWidth="114.0" text="Producto" />
                <TableColumn fx:id="productdescription" editable="false" prefWidth="177.0" text="Descripcion" />
                  <TableColumn fx:id="carrito" prefWidth="65.0" text="Carrito" />
              </columns>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </TableView>
         </children>
         <padding>
            <Insets right="5.0" />
         </padding>
      </VBox>
      <VBox prefHeight="487.0" prefWidth="289.0">
         <children>
            <HBox prefHeight="89.0" prefWidth="274.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Caja" wrappingWidth="40.0">
                     <HBox.margin>
                        <Insets top="3.0" />
                     </HBox.margin></Text>
                  <Separator prefWidth="200.0" visible="false" />
                  <Button fx:id="settings_btn" mnemonicParsing="false" prefHeight="26.0" prefWidth="106.0" text="Ajustes" />
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </HBox>
            <TableView fx:id="sales" prefHeight="447.0" prefWidth="274.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="salesproductname" prefWidth="153.0" text="Producto" />
                <TableColumn fx:id="salesproductquantity" prefWidth="67.0" text="Cantidad" />
                  <TableColumn fx:id="salesproductprice" editable="false" minWidth="9.0" prefWidth="53.0" text="Precio" />
              </columns>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </TableView>
            <StackPane prefHeight="150.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Total:" />
                        <Separator orientation="VERTICAL" prefHeight="200.0" visible="false" />
                        <Label fx:id="totalprice" text="text" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
                  <Button fx:id="commitsale" mnemonicParsing="false" prefHeight="26.0" prefWidth="117.0" text="Confirmar" StackPane.alignment="CENTER_RIGHT" />
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </StackPane>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets left="5.0" />
         </padding>
      </VBox>
   </children>
</HBox>
